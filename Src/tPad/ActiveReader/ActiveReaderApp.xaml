<UserControl x:Class="UofM.HCI.tPab.App.ActiveReader.ActiveReaderApp" x:Name="arApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:src="clr-namespace:UofM.HCI.tPab;assembly=tPadLib"
             xmlns:converters="clr-namespace:UofM.HCI.tPab.App.ActiveReader.Converters"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" Loaded="arApp_Loaded">
  
  <UserControl.Resources>
    <converters:LayerScalingConverter x:Key="cLayerScaling" />
  </UserControl.Resources>
  
  <Grid Width="{Binding ElementName=arApp, Path=Profile.DocumentSize.Width, FallbackValue=500}" 
        Height="{Binding ElementName=arApp, Path=Profile.DocumentSize.Width, FallbackValue=600}">
    
    <WindowsFormsHost x:Name="wfhAcrobatReader" HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>

    <Grid x:Name="gCanvas" Background="Pink" HorizontalAlignment="Left" VerticalAlignment="Top"
          Width="{Binding ElementName=arApp, Path=Profile.DocumentSize.Width, Converter={StaticResource ResourceKey=cLayerScaling}}"
          Height="{Binding ElementName=arApp, Path=Profile.DocumentSize.Height, Converter={StaticResource ResourceKey=cLayerScaling}}">
      <Grid.RenderTransform>
        <TransformGroup>
          <RotateTransform Angle="{Binding ElementName=arApp, Path=Device.Location.RotationAngle, FallbackValue=0}"/>
          <TranslateTransform X="100" Y="100"/>
        </TransformGroup>
      </Grid.RenderTransform>
    </Grid>
  </Grid>
</UserControl>
