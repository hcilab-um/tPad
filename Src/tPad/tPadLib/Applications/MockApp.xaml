<UserControl x:Class="UofM.HCI.tPab.Applications.MockApp" x:Name="mockApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:convertersLib="clr-namespace:UofM.HCI.tPab.Converters"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300" Loaded="mockApp_Loaded">

  <UserControl.Resources>
    <convertersLib:IntToBinaryConverter x:Key="cIntToBinary"/>
  </UserControl.Resources>
  
  <Grid Width="{Binding ElementName=mockApp, Path=ActualWidth}" Height="{Binding ElementName=mockApp, Path=ActualHeight}">
    
    <!-- This rectangle guarantees a correct placement of the layers - do not delete -->
    <Rectangle VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Stroke="Green" StrokeThickness="1" Fill="Transparent" Opacity="0.5"/>

    <Label VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15">Mock TPad Application</Label>
    <TextBlock VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="15" Margin="0,30,0,0">Device ID: <TextBlock Text="{Binding ElementName=mockApp, Path=Core.Device.ID, Mode=OneWay, Converter={StaticResource ResourceKey=cIntToBinary}}"/></TextBlock>

  </Grid>
  
</UserControl>
