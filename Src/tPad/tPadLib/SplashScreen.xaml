<Window x:Class="UofM.HCI.tPad.SplashScreen" x:Name="wSplash"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="ActiveReader for tPad - Loading..." Background="Black" SizeToContent="WidthAndHeight"
        WindowStyle="None" Visibility="Visible" ResizeMode="NoResize" Topmost="True" WindowStartupLocation="CenterScreen">
  <Grid MaxWidth="500">
    <StackPanel Margin="5">
      <Grid>
        <Image Name="image1" Source="Images/Splash.png" />
        <TextBlock VerticalAlignment="Bottom" HorizontalAlignment="Left" FontSize="20" FontWeight="Bold" Margin="5">Loading...</TextBlock>
      </Grid>
      <ProgressBar Height="20" Name="progressBar" Minimum="0" Maximum="100" Value="{Binding ElementName=wSplash, Path=LoadingProgress}"/>
    </StackPanel>
  </Grid>
</Window>
