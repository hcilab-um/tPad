<Window x:Class="UofM.HCI.tPab.TPadWindow" x:Name="tpWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converters="clr-namespace:UofM.HCI.tPab.Converters"
        WindowStyle="ToolWindow" ResizeMode="NoResize" SizeToContent="WidthAndHeight" Topmost="True" SizeChanged="tpWindow_SizeChanged">
  
  <Window.Resources>
    <converters:MultiplierConverter x:Key="cMultiplier" />
  </Window.Resources>
  
  <Grid x:Name="gTPadApp" 
        Width="{Binding ElementName=tpWindow, Path=Profile.Resolution.Width, Converter={StaticResource ResourceKey=cMultiplier}, ConverterParameter=0.75}" 
        Height="{Binding ElementName=tpWindow, Path=Profile.Resolution.Height, Converter={StaticResource ResourceKey=cMultiplier}, ConverterParameter=0.75}">
  </Grid>
</Window>
