<UserControl x:Class="UofM.HCI.tPab.CalculatorApp" x:Name="calculatorApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:xceed="clr-namespace:Xceed.Wpf.Toolkit;assembly=Xceed.Wpf.Toolkit"
             mc:Ignorable="d" Loaded="calculatorApp_Loaded"
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid Width="{Binding ElementName=calculatorApp, Path=ActualWidth}" Height="{Binding ElementName=calculatorApp, Path=ActualHeight}">
    <xceed:Calculator VerticalAlignment="Stretch" HorizontalAlignment="Stretch" Background="Black"/>
  </Grid>
</UserControl>
