<UserControl x:Class="UofM.HCI.tPad.App.Dashboard.DashboardApp" x:Name="dashboardApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:convertersLib="clr-namespace:UofM.HCI.tPad.Converters;assembly=tPadLib"
             mc:Ignorable="d" d:DesignHeight="300" d:DesignWidth="300">
  
  <UserControl.Resources>
    <convertersLib:WPFBitmapConverter x:Key="cWPFBS" />
    <convertersLib:MultiplierConverter x:Key="cMultiplier" />
    <convertersLib:FlippingSideToScaleConverter x:Key="fsToScale" />
  </UserControl.Resources>
  
  <StackPanel Orientation="Vertical">
    <Label FontWeight="Bold">tPad Applications</Label>
    <ListBox ItemsSource="{Binding ElementName=appDashboard, Path=Applications}" ScrollViewer.HorizontalScrollBarVisibility="Disabled">
      <ListBox.ItemsPanel>
        <ItemsPanelTemplate>
          <WrapPanel Orientation="Horizontal" />
        </ItemsPanelTemplate>
      </ListBox.ItemsPanel>
      <ListBox.ItemTemplate>
        <DataTemplate>
          <StackPanel Orientation="Vertical" Margin="10">
            <Image Source="{Binding Path=Icon, Converter={StaticResource ResourceKey=cWPFBS}}" HorizontalAlignment="Center" Width="80" MouseUp="Image_MouseUp"/>
            <Label Content="{Binding Path=Name}" HorizontalAlignment="Center" FontWeight="Bold"/>
          </StackPanel>
        </DataTemplate>
      </ListBox.ItemTemplate>
    </ListBox>
    <Label FontWeight="Bold">Dashboard Settings</Label>
    <StackPanel Orientation="Horizontal">
      <CheckBox x:Name="cbUserDefaultFlippingApp" Content="Browser @ Flipping" IsChecked="False" Margin="16"/>
    </StackPanel>
  </StackPanel>

  <UserControl.RenderTransform>
    <ScaleTransform ScaleX="{Binding ElementName=dashboardApp, Path=Core.Device.FlippingSide, Converter={StaticResource ResourceKey=fsToScale}}"
                    CenterX="{Binding ElementName=dashboardApp, Path=ActualWidth, Converter={StaticResource ResourceKey=cMultiplier}, ConverterParameter=0.5}"
                    CenterY="{Binding ElementName=dashboardApp, Path=ActualHeight, Converter={StaticResource ResourceKey=cMultiplier}, ConverterParameter=0.5}"/>
  </UserControl.RenderTransform>

</UserControl>
