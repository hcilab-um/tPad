<UserControl x:Class="UofM.HCI.tPad.App.Dashboard.NotificationDialog" x:Name="nDialog"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <Grid Background="#55000000">

    <Grid VerticalAlignment="Center" HorizontalAlignment="Center" Width="380" Height="400">
      <Rectangle RadiusX="10" RadiusY="10" Stroke="Black" StrokeThickness="5" Fill="White"/>
      <DockPanel Margin="20">
        <TextBlock Text="{Binding ElementName=nDialog, Path=Message}" />
      </DockPanel>
    </Grid>
    
  </Grid>
</UserControl>
