<UserControl x:Class="UofM.HCI.tPad.App.InfSeeking.InfProviderApp" x:Name="ipApp"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" d:DesignHeight="800" d:DesignWidth="480" Background="White" Loaded="UserControl_Loaded">
  <Grid>
    
    <Image VerticalAlignment="Top" HorizontalAlignment="Right" Source="{Binding ElementName=ipApp, Path=Image}" Width="100" Margin="50"/>
    
    <Label Content="{Binding ElementName=ipApp, Path=CurrentTarget.Target, FallbackValue=EMPTY}" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="100" Background="LightGray"
           MouseDoubleClick="Label_MouseDoubleClick" MouseDown="Label_MouseDown" MouseUp="Label_MouseUp"/>
  </Grid>
</UserControl>
